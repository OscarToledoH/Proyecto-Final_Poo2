@model PerifericosModel

@{
    ViewData["Title"] = "Borrar la categoría del Periferico";
}


<h3 class="mb-3"></h3>

<form asp-asp-controller="Perifericos" asp-action="PerifericosDeleted">

    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">Información del Periferico</h5>
            <h6 class="card-subtitle mb-2 text-body-secondary">¿Está seguro que desea borrar al periferico?</h6>
            <p class="card-text">Periferico: @Model.Name</p>
        </div>
    </div>


    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Borrar</button>
    <a class="btn btn-secondary" asp-action="PerifericosList" asp-controller="Perifericos">Cancelar</a>
</form>