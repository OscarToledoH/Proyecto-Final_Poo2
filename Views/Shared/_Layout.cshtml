@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PrimerAvancePOO2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PrimerAvancePOO2.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <div class="nav">
            <div class="containerr">
                <img class="image" asp-action="Index" asp-controller="Home" src="/imgUsuario/logodemo.png" alt="">
                <a asp-controller="Home" asp-action="Index" class="logo-title">AREA PC</a>
                <!--MENU DESPLEGABLE-->
                <div class="dropdown-center">
                <button class="btn btn-outline-light dropdown-toggle drop" type="button" data-bs-toggle="dropdown"
                    aria-expanded="false">
                    Componentes PC
                </button>
                <ul class="dropdown-menu men">
                    <li><a asp-controller="Dropdown" asp-action="TarjetaMadre" class="dropdown-item" >Tarjeta Madre</a></li>
                    <li><a asp-controller="Dropdown" asp-action="FuentePoder" class="dropdown-item" >Fuente de Poder</a></li>
                    <li><a asp-controller="Dropdown" asp-action="MemoriaRam" class="dropdown-item" >Memoria Ram</a></li>
                    <li><a asp-controller="Dropdown" asp-action="Almacenamiento" class="dropdown-item" >Almacenamiento</a></li>
                </ul>
                </div>

                <div class="dropdown-center">
                <button class="btn btn-outline-light dropdown-toggle" type="button" data-bs-toggle="dropdown"
                    aria-expanded="false">
                    Perifericos PC
                </button>
                <ul class="dropdown-menu">
                    <li><a asp-controller="Dropdown2" asp-action="Monitores" class="dropdown-item" >Monitores</a></li>
                    <li><a asp-controller="Dropdown2" asp-action="Mouse" class="dropdown-item" >Mouse</a></li>
                    <li><a asp-controller="Dropdown2" asp-action="Teclados" class="dropdown-item" >Teclados</a></li>
                </ul>
            </div>

            @if(User.IsInRole("ADMIN")){
                
                 <div class="dropdown-center">
                <button class="btn btn-outline-light dropdown-toggle" type="button" data-bs-toggle="dropdown"
                    aria-expanded="false">
                    Administrador
                </button>
                <ul class="dropdown-menu">
                    <li><a asp-controller="Componente" asp-action="ComponentesList" class="dropdown-item" >Componentes</a></li>
                    <li><a asp-controller="Proveedor" asp-action="ProveedoresList" class="dropdown-item" >Proveedores</a></li>
                    <li><a asp-controller="Perifericos" asp-action="PerifericosList" class="dropdown-item" >Perifericos</a></li>
                    <li><a asp-controller="Usuarios" asp-action="UsuariosList" class="dropdown-item" >Usuarios</a></li>
                    <li><a asp-controller="Rol" asp-action="RolList" class="dropdown-item" >Rol de Usuarios</a></li>
                </ul>
                </div>
            }
            
        
        </div>
        

            <!--INICIO DE SESION-->
            @if (SignInManager.IsSignedIn(User))
        {
            

            <li class="container-lg">
                <form class="content-lg" asp-action="Logout" asp-controller="Usuarios">
                    <button type="submit" class="nav-link btn btn-link text-dark" >
                        Logout
                    </button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link dark-text" asp-controller="Usuarios" asp-action="Registros">Registro</a>
            </li>
            <li class="nav-item">
                <a class="nav-link dark-text" asp-controller="Usuarios" asp-action="InicioSesion">Iniciar Sesion</a>
            </li>
        }



            <!--CARRITO DE COMPRAS-->
            <div class="d-flex">
                    <a asp-controller="Carro" asp-action="CarritoList">
                        <!--
                        <svg xmlns="http://www.w3.org/2000/svg"  class="bi bi-cart4"
                            viewBox="0 0 16 16">
                            <path
                                d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l.5 2H5V5zM6 5v2h2V5zm3 0v2h2V5zm3 0v2h1.36l.5-2zm1.11 3H12v2h.61zM11 8H9v2h2zM8 8H6v2h2zM5 8H3.89l.5 2H5zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0" />
                        </svg>
                        -->
                    </a>

                </div>

                <partial name="_LinksLogin"/>

        </div>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
