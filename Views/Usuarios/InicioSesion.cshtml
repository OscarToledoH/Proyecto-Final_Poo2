@model LoginViewModel
@{
    ViewData["title"] = "Inicio de Sesion";
}
<link rel="stylesheet" href="~/css/registros.css" asp-append-version="true" />



<div class="card card-perso2">
    <div class="card-body">
        <form asp-action="InicioSesion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-center titulo-perso">Iniciar Sesion</div><br><br>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" autocomplete="off" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

             <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" autocomplete="off" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="Recuerdame">
                <label class="form-check-label" asp-for="Recuerdame"></label>
            </div>

            <button class="btn-perso2">Iniciar Sesion</button>
            <a class="btn-perso3" asp-action="Registros">Crear cuenta nueva</a>
            
        </form>
        
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}