@model List<RolViewModel>
@{
    ViewData["Title"] = "Lista de Roles de Usuario";
    int numero = 0;
}
<link rel="stylesheet" href="~/css/views.css">

<div class="text-center">
    <h1 class="display-2 text-center">@ViewData["Title"]</h1>
    <a class="btn btn-outline-primary" asp-action="RolAdd" asp-asp-controller="Rol">Crear Rol de Usuario</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rol in Model)
        {
            {
                numero++;
            }
            <tr>
                <th scope="row">@numero</th>
                <td>@rol.Name</td>
                <td>
                    <a class="btn btn-outline-info" asp-action="RolEdit" asp-controller="Rol"
                        asp-route-id="@rol.Id">Editar</a>
                    <a class="btn btn-outline-danger" asp-action="RolDeleted" asp-controller="Rol"
                        asp-route-id="@rol.Id">Borrar</a>
                </td>
            </tr>

        }
    </tbody>
</table>