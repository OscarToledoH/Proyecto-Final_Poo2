@model IEnumerable<ProveedoresModel> 

@{
    ViewData["Title"] = "Listado de Proveedores:";
    int Id = 0;
}
<link rel="stylesheet" href="~/css/views.css">

<div class="container-tablas">
    <div class="tabla-titul">
        <h1>Listado de Proveedores</h1>
        <a asp-controller="Proveedor" asp-action="ProveedoresAdd">+ Añadir</a>
    </div>
<table class="tablass table table-borderless table-striped table-hover">  
    <thead>
<tr>
    <th scope="col">Acciones </th>
    <th scope="col">ID</th>
    <th scope="col">Nombre</th>
    <th scope="col">Teléfono</th>
    <th scope="col">Dirección</th>
    <th scope="col">Email</th>

</tr>

    </thead>
<tbody>
@foreach (var proveedor in Model)
{
    {
        Id++;
    }
    <tr>
        <td>
<a class="btn" asp-controller="Proveedor" asp-action="ProveedoresEdit" asp-route-id="@proveedor.Id">
    <img class="editarr" src="~/imgadmin/edit.svg" alt="">
</a>

<a class="btn " asp-controller="Proveedor" asp-action="ProveedoresDeleted" asp-route-id="@proveedor.Id">
    <img class="editarr" src="~/imgadmin/basura.svg" alt="">
</a>
        </td>
        <td> @Id</td>
        <td> @proveedor.Name</td>
        <td> @proveedor.Telefono</td>
        <td> @proveedor.Direccion</td>
        <td> @proveedor.Email</td>
    </tr>
}
</tbody>
</table>
</div>
